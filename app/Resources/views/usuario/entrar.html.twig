{% extends 'layout.html.twig' %}

{% block title 'Bienvenido' %}

{% block content %}
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Entrar en la aplicación</div>
            <div class="panel-body">
                {% if error %}
                    <div class="alert alert-danger alert-dismissable">
                        {{ error.message | trans }}
                    </div>
                {% endif %}
                <form method="post" action="{{ path('usuario_comprobar') }}" class="form" role="form">
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" name="_username" id="email" required="" class="form-control" tabindex="1"
                               autocorrect="off" autocapitalize="none">
                    </div>
                    <div class="form-group">
                        <label for="pass">Contraseña</label>
                        <input type="password" name="_password" id="pass" required="" class="form-control" tabindex="2">
                    </div>
                    <div class="form-group">
                        <button type="submit" name="enviar" class="btn btn-info btn-block" tabindex="3">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
