{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                    <span class="sr-only">Desplegar</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('resultados') }}">
                    {% block navbartitle %}<i class="fa fa-soccer-ball-o"></i> Fútbol7{% endblock %}
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                {% if app.user %}
                    <p class="navbar-text">Conectado como {{ app.user.correoElectronico }}</p>
                {% endif %}
                <ul class="nav navbar-nav navbar-right">
                    {# ¡IMPORTANTE! usar href="{{ path('...' }}" en lugar de poner las rutas directamente #}
                    {% if is_granted('ROLE_COMENTARISTA') %}<li><a href="{{ path('equipo_listar') }}"><i class="fa fa-users"></i> Equipos</a></li>{% endif %}
                    {% if is_granted('ROLE_ARBITRO') %}<li><a href="{{ path('partido_listar') }}"><i class="fa fa-eye"></i> Partidos</a></li>{% endif %}
                    {% if app.user %}
                        <li><a href="{{ path('usuario_salir') }}"><i class="fa fa-sign-out"></i> Salir</a></li>
                    {% else %}
                        <li><a href="{{ path('usuario_entrar') }}"><i class="fa fa-sign-in"></i> Entrar en la aplicación</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('exito') %}
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% block content %}{% endblock %}
    </div>

    <footer class="footer no-print" role="contentinfo">
        <div class="container">
            {% block footer %}
                <p class="text-muted">
                    Horas de Libre Configuración - 2ºDAW - I.E.S. Oretania
                </p>
            {% endblock %}
        </div>
    </footer>
{% endblock %}
